<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true"


    >

    <ImageView
        android:id="@+id/notif_pengumuman"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/notif_pengumuman_click" />

    <android.support.v7.widget.CardView
        android:id="@+id/notif_p_card"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:cardBackgroundColor="@color/colorRed"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="@+id/notif_pengumuman"
        app:layout_constraintTop_toTopOf="@+id/notif_pengumuman">


        <TextView
            android:id="@+id/notif_p_counter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/colorWhiteText"
            android:textSize="12sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>